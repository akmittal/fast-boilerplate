{
  "name": "fast-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rimraf build-modern && rollup -c rollup.config.js",
    "start:build": "http-server build-modern -o",
    "watch:build": "rimraf build-modern && rollup --watch -c rollup.config.js & http-server build-modern -o",
    "start": "rollup -c -w & es-dev-server --root-dir ./build-modern --app-index index.html --node-resolve --watch --open ",
    "lint:eslint": "eslint --ext .ts,.js,.html .",
    "format:eslint": "eslint --ext .ts,.js,.html . --fix",
    "lint:prettier": "prettier \"**/*.ts\" --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "format:prettier": "prettier \"**/*.ts\" --write",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com-p:akmittal/fast-boilerplate.git"
  },
  "keywords": [
    "web-components",
    "custom-elements",
    "fast-design",
    "shadow-dom"
  ],
  "author": {
    "email": "mittalmailbox@gmail.com",
    "name": "Amit Mittal",
    "url": "http://github.com/akmittal"
  },
  "license": "MIT",
  "dependencies": {
    "@microsoft/fast-element": "^0.19.0"
  },
  "devDependencies": {
    "@open-wc/rollup-plugin-html": "^1.2.4",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "es-dev-server": "^1.57.5",
    "eslint": "^7.10.0",
    "http-server": "^0.12.3",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.28.2",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.0.1",
    "typescript": "^4.0.3"
  }
}
